<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#010101"
    tools:context="com.android.gaoyun.aesencrypter.FileEncrypterActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load File"
        android:id="@+id/loadButton"
        android:textColor="#26a623"
        android:background="#222223"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Encrypt File"
        android:layout_marginTop="10dp"
        android:id="@+id/encryptFileButton"
        android:onClick="encryptFile"
        android:textColor="#26a623"
        android:background="#222223"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/loadButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decrypt File"
        android:layout_marginTop="10dp"
        android:onClick="decryptFile"
        android:id="@+id/decryptFileButton"
        android:textColor="#26a623"
        android:background="#222223"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/encryptFileButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/fileTestText"
        android:textColor="#26a623"
        android:background="#222223"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fileName"
        android:layout_marginTop="10dp"
        android:textColor="#26a623"
        android:layout_below="@+id/decryptFileButton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColor="#26a623"
        android:id="@+id/filePassword"
        android:layout_below="@+id/fileName"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
